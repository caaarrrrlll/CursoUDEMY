//Practica21
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#define PI 3.1416

struct cilindro {
    float diametro;
    float carrera;
};

struct motor {
    int identificador;
    struct cilindro cilindro1;
    int numero_cilindro;
    float cilindrada;
};

int main() {
    struct motor motor1;
    printf("Introduce el identificador: ");
    scanf("%d", &motor1.identificador);
    printf("\n");
    printf("Introduzca el diámetro del cilindro (mm): ");
    scanf("%f", &motor1.cilindro1.diametro);
    printf("\n");
    printf("Introduzca la carrera del cilindro (mm): ");
    scanf("%f", &motor1.cilindro1.carrera);
    printf("\n");
    printf("Introduce el número de cilindros: ");
    scanf("%d", &motor1.numero_cilindro);

    motor1.cilindrada = (motor1.numero_cilindro * (motor1.cilindro1.carrera / 10) * PI * pow((motor1.cilindro1.diametro / 10), 2)) / 4;

    printf("Identificador: %d\n", motor1.identificador);
    printf("Diámetro (mm): %.2f\n", motor1.cilindro1.diametro);
    printf("Carrera (mm): %.2f\n", motor1.cilindro1.carrera);
    printf("Número de cilindros: %d\n", motor1.numero_cilindro);
    printf("Cilindrada: %.2f\n", motor1.cilindrada);

    return 0;
}
